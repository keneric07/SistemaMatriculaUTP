<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editar_usuario"
    android:orientation="vertical"
    android:background="#373737"

    >

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Credenciales"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:fontFamily="@font/hot_rod"
        android:textColor="#FEB822"
        android:padding="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/texto_name"
        android:text=" Nuevo nombre:"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:textColor="#FEB822"
        android:fontFamily="@font/victorpro"   />

    <EditText
        android:fontFamily="@font/victorpro"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/nuevo_name"
        android:hint="-nombre de usuario-"
        android:textColorHint="#9A9A9A"

        />




    <TextView
        android:fontFamily="@font/victorpro"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/texto_pass"
        android:text=" Nueva contraseña:"
        android:textColor="#FEB822"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:textColor="#FFFFFF"
        android:fontFamily="@font/victorpro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/nueva_pass"
        android:textColorHint="#9A9A9A"
        android:hint="-contraseña-"   />


    <com.google.android.material.button.MaterialButton
        android:layout_width="200dp"
        android:fontFamily="@font/victorpro"
        android:id="@+id/confirmar_edit"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:textColor="@color/black"
        android:backgroundTint="#FEB822"
        android:onClick="guardarUsuario"
        android:layout_gravity="center"

        />

</LinearLayout>