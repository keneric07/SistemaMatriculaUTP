<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#373737">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nuevo Sistema de Matricula"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:fontFamily="@font/hot_rod"
        android:textColor="#FEB822"
        android:padding="15dp" />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/icono"
        />
    <EditText
        android:fontFamily="@font/victorpro"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtCedula"
        android:hint="-Cedula-"
        android:textColorHint="#9A9A9A"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="28dp"
        />
    <EditText
        android:fontFamily="@font/victorpro"

        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPassword"
        android:hint="-ContraseÃ±a-"
        android:textColorHint="#9A9A9A"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="28dp"
        />


    <Button
        android:layout_width="200dp"
        android:fontFamily="@font/victorpro"

        android:layout_height="wrap_content"
        android:text="Iniciar Sesion"
        android:textColor="@color/black"
        android:backgroundTint="#FEB822"
        android:onClick="validarUsuario"
        android:layout_gravity="center"
        />

    <Button
        android:fontFamily="@font/victorpro"

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegistrar"
        android:textColor="@color/black"
        android:backgroundTint="#FFFFFF"
        android:onClick="IrRegistro"
        android:text="Regristrar"
        android:layout_gravity="center"/>


    <RelativeLayout
        android:background="#232323"
        android:paddingTop="25dp"
        android:paddingBottom="27dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/utp_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/utp_img" />

        <TextView
            android:fontFamily="@font/victorpro"
            android:id="@+id/tltUtpr"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/utp_img"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="Universidad Tecnologica de Panama Facultad De Ingenieria en Sistemas Computacionales"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="9dp" />
        <ImageView
            android:id="@+id/fisc_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/fisc_img"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>





</LinearLayout>